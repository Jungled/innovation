<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="innovation.dao.UserDAO">
            
         <insert id="save" parameterType="User" keyProperty="tid">
             insert into user( 
         password,
         name)
         values
         (       
         #{password},
         #{name})
         </insert>
         <select id="query" resultType="User">
            select * from user where name=#{0} 
         </select>
         <select id="checkNameValidate" resultType="java.lang.Integer">
            select count(*) from user where name=#{0} 
         </select>

</mapper>